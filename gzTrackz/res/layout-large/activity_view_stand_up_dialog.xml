<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1050dp"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ViewStandupActivity" >
    
    <LinearLayout 
        android:id="@+id/l1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">
    <TextView 
        android:id="@+id/standupdate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="27sp"
        android:textColor="#000000"
        android:text="June 30, 2014"
        />

    <TextView
        android:id="@+id/standuptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="149dp"
        android:text="12:00:32 AM"
        android:textStyle="italic"
        android:textSize="24sp" />

    </LinearLayout>
    <LinearLayout 
        android:layout_below="@+id/l1"
        android:id="@+id/l2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <View 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#357ec7"
        />
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/l3"
        android:layout_below="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/previoustext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What I did in the Previous"
            android:textColor="@color/text_color_pressed"
            android:textSize="33dp"/>


        <TextView 
            android:id="@+id/previousstandup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDFJKLSDFJKLSDFKSDKJLFSDJKLFSDJKLFJKLSDFJKLSDFJKLSDJKLFSDJKL"
            android:layout_marginLeft="30dp"
            android:textSize="27dp"
            android:textStyle="italic"/>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/l4"
        android:layout_below="@+id/l3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/todotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What I plan to do now"
            android:textColor="@color/text_color_pressed"
            android:textSize="33dp"/>


        <TextView 
            android:id="@+id/todonowstandup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDFJKLSDFJKLSDFKSDKJLFSDJKLFSDJKLFJKLSDFJKLSDFJKLSDJKLFSDJKL"
            android:layout_marginLeft="30dp"
            android:textSize="27dp"
            android:textStyle="italic"/>
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/l5"
        android:layout_below="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/problemstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What were the problems encountered"
            android:textColor="@color/text_color_pressed"
            android:textSize="33dp"/>


        <TextView 
            android:id="@+id/problemsstandup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDFJKLSDFJKLSDFKSDKJLFSDJKLFSDJKLFJKLSDFJKLSDFJKLSDJKLFSDJKL"
            android:layout_marginLeft="30dp"
            android:textSize="27dp"
            android:textStyle="italic"/>
    </LinearLayout>
    
   </RelativeLayout>